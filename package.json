{
  "name": "renovate-config-algolia",
  "description": "Algolia's renovate shareable configuration",
  "version": "2.1.3",
  "renovate": {
    "extends": [
      "config:js-lib",
      "algolia"
    ]
  },
  "renovate-config": {
    "default": {
      "enabledManagers": [
        "circleci",
        "docker-compose",
        "dockerfile",
        "npm",
        "nvm",
        "terraform",
        "cloudbuild"
      ],
      "major": {
        "automerge": false
      },
      "minor": {
        "automerge": true
      },
      "patch": {
        "automerge": true
      },
      "pin": {
        "automerge": true
      },
      "separateMultipleMajor": true,
      "schedule": [
        "after 4pm on friday",
        "before 9am on monday",
        "every weekend"
      ],
      "reviewers": [],
      "semanticCommitType": "chore",
      "docker": {
        "enabled": true
      },
      "circleci": {
        "enabled": true
      },
      "node": {
        "supportPolicy": [
          "lts_active"
        ]
      },
      "lockFileMaintenance": {
        "enabled": true
      },
      "dependencyDashboard": true,
      "stabilityDays": 1,
      "prCreation": "not-pending",
      "timezone": "Europe/Paris",
      "prHourlyLimit": 4,
      "prConcurrentLimit": 50
    }
  },
  "scripts": {
    "release": "semantic-release"
  },
  "license": "MIT",
  "author": "Algolia, Inc. (https://www.algolia.com)",
  "devDependencies": {
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/npm": "7.1.3",
    "semantic-release": "17.4.7"
  }
}
