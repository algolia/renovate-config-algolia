{
  "name": "renovate-config-algolia",
  "description": "Algolia's renovate shareable configuration",
  "version": "2.1.1",
  "renovate": {
    "extends": [
      "config:js-lib",
      "algolia"
    ]
  },
  "renovate-config": {
    "default": {
      "extends": [
        "schedule:weekends",
        ":automergeMinor",
        ":automergeBranchPush",
        ":semanticCommits",
        ":rebaseStalePrs",
        ":prConcurrentLimit4",
        ":prHourlyLimit2",
        ":timezone(Europe/Paris)"
      ]
    }
  },
  "scripts": {
    "release": "np --no-publish && npm publish",
    "version": "doctoc *.md && git add *.md"
  },
  "license": "MIT",
  "author": "Algolia, Inc. (https://www.algolia.com)",
  "devDependencies": {
    "doctoc": "1.4.0",
    "np": "4.0.2"
  }
}
